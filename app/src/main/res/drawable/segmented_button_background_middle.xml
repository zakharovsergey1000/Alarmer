<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#000000" android:startColor="#6d6d6d" />

            <stroke android:width="1dp" android:color="#38393a" />

            <corners android:radius="1dp" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#000000" android:startColor="#6d6d6d" />

            <stroke android:width="1dp" android:color="#38393a" />

            <corners android:radius="1dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#222732" android:startColor="#81838a" />

            <stroke android:width="1dp" android:color="#38393a" />

            <corners android:radius="0dp" />
        </shape></item>

</selector>