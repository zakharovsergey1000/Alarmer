<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <Button
            android:id="@+id/fragment_task_viewing_messages_button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/fragment_view_task_part_messages_button_send" />

        <EditText
            android:id="@+id/fragment_task_viewing_messages_textview_new_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/fragment_task_viewing_messages_button_send"
            android:hint="@string/fragment_view_task_part_messages_textview_new_message"
            android:lines="3" />

        <ListView
            android:id="@+id/fragment_task_viewing_messages_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/fragment_task_viewing_messages_textview_new_message" />
    </RelativeLayout>

</LinearLayout>