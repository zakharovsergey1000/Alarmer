<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fragment_edit_task_part_messages_header_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_edit_task_part_messages_header_textview" />

    <ListView
        android:id="@+id/fragment_edit_task_part_messages_listview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_edit_task_part_messages_header_textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_edit_task_part_messages_header_textview2" />

        <EditText
            android:id="@+id/fragment_edit_task_part_messages_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <Button
            android:id="@+id/fragment_edit_task_part_messages_button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_edit_task_part_messages_button_send" />
    </LinearLayout>

</LinearLayout>