<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" >
	<LinearLayout
		android:id="@+id/linearlayout_occurrences_picker"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >
		<com.android.supportdatetimepicker.date.TextViewWithCircularIndicator
			android:id="@+id/checkbox_day_of_week_1"
			android:layout_width="48dp"
			android:layout_height="48dp" android:gravity="center"
			android:saveEnabled="false" />
		<com.android.supportdatetimepicker.date.TextViewWithCircularIndicator
			android:id="@+id/checkbox_day_of_week_2"
			android:layout_width="48dp"
			android:layout_height="48dp" android:gravity="center"
			android:saveEnabled="false" />
		<com.android.supportdatetimepicker.date.TextViewWithCircularIndicator
			android:id="@+id/checkbox_day_of_week_3"
			android:layout_width="48dp"
			android:layout_height="48dp" android:gravity="center"
			android:saveEnabled="false" />
		<com.android.supportdatetimepicker.date.TextViewWithCircularIndicator
			android:id="@+id/checkbox_day_of_week_4"
			android:layout_width="48dp"
			android:layout_height="48dp" android:gravity="center"
			android:saveEnabled="false" />
		<com.android.supportdatetimepicker.date.TextViewWithCircularIndicator
			android:id="@+id/checkbox_day_of_week_5"
			android:layout_width="48dp"
			android:layout_height="48dp" android:gravity="center"
			android:saveEnabled="false" />
		<com.android.supportdatetimepicker.date.TextViewWithCircularIndicator
			android:id="@+id/checkbox_day_of_week_6"
			android:layout_width="48dp"
			android:layout_height="48dp" android:gravity="center"
			android:saveEnabled="false" />
		<com.android.supportdatetimepicker.date.TextViewWithCircularIndicator
			android:id="@+id/checkbox_day_of_week_7"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:gravity="center"
			android:saveEnabled="false" />
	</LinearLayout>
</HorizontalScrollView>