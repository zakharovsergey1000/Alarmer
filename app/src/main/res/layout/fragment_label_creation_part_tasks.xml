<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<TextView
		android:id="@+id/fragment_label_creation_part_tasks_textview_tasks_list_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/fragment_label_creation_part_tasks_textview_tasks_list_header"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	<pl.polidea.treeview.TreeViewList
		xmlns:treeView="http://schemas.android.com/apk/res-auto"
		android:id="@+id/fragment_label_creation_part_tasks_treeview_tasks"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbars="vertical"
		android:smoothScrollbar="true"
		treeView:indicator_gravity="right|center_vertical" />
</LinearLayout>