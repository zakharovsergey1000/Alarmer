<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >
		<TextView
			android:id="@+id/fragment_edit_task_part_main_textview_on_nth_week_day"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/fragment_edit_task_part_main_textview_on_nth_week_day"
			android:textAppearance="?android:attr/textAppearanceMedium" />
		<Spinner
			android:id="@+id/fragment_edit_task_part_main_spinner_week_day_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:entries="@array/week_day_number_spinner_titles_array" />
	</LinearLayout>
	<include
		android:id="@+id/scrollview_week_days_picker"
		layout="@layout/week_days_picker" />
</LinearLayout>