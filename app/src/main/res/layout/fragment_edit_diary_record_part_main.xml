<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_edit_diary_record_part_main_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_edit_diary_record_part_main_header_textview_diary_record_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_edit_diary_record_part_main_header_textview_diary_record_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/fragment_edit_diary_record_part_main_edittext_diary_record_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_edit_diary_record_part_main_header_textview_diary_record_linked_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_diary_record_part_main_header_textview_diary_record_linked_task"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/fragment_edit_diary_record_part_main_checkbox_diary_record_linked_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_diary_record_part_main_checkbox_diary_record_linked_task_not_set" />

            <CheckBox
                android:id="@+id/fragment_edit_diary_record_part_main_checkbox_diary_record_task_was_completed                "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_diary_record_part_main_checkbox_diary_record_task_was_completed" />

            <CheckBox
                android:id="@+id/fragment_edit_diary_record_part_main_checkbox_diary_record_waste_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_diary_record_part_main_checkbox_diary_record_waste_time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fragment_edit_diary_record_part_main_header_textview_diary_record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_edit_diary_record_part_main_header_textview_diary_record_date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/fragment_edit_diary_record_part_main_checkbox_diary_record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date_checked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fragment_view_diary_record_part_main_header_textview_diary_record_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_view_diary_record_part_main_header_textview_diary_record_starttime"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/fragment_edit_diary_record_part_main_checkbox_diary_record_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_time_checked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fragment_view_diary_record_part_main_header_textview_diary_record_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_view_diary_record_part_main_header_textview_diary_record_endtime"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/fragment_edit_diary_record_part_main_checkbox_diary_record_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_time_checked" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>